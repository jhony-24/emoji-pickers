{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "types" : [ "node" ],
      "outDir": "lib/ReactEmojiPicker",
      "allowJs": true,
      "declaration": true,
      "noEmit": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react"
    },
    "include": [
      "src/lib/ReactEmojiPicker"
    ],
    "exclude" : [
      "src/lib/ReactEmojiPicker/__tests__",
      "src/lib/ReactEmojiPicker/renderEmojiPicker.tsx"
    ]
}
 